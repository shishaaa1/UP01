<Window x:Class="TaigerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaigerDesktop"
        mc:Ignorable="d"
        Title="TaigerDesktop" Height="800" Width="1200"
        Background="{StaticResource LightBackgroundBrush}"
        Icon="Images/icon.ico">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Стиль для пункта меню -->
            <Style x:Key="MenuItemButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Padding" Value="20,0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource SoftLavenderBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Активный пункт меню -->
            <Style x:Key="ActiveMenuItemStyle" BasedOn="{StaticResource MenuItemButtonStyle}" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource SoftLavenderBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource DarkPurpleBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" x:Name="MenuColumn"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню — скрыто по умолчанию -->
        <Border x:Name="MenuBorder"
            Grid.Column="0"
            Background="{StaticResource WhiteBrush}"
            Padding="0,30,0,20"
            Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Меню"
                       Foreground="{StaticResource DarkPurpleBrush}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="20,0,0,30"/>
                <Button x:Name="BthHome" Content="Домой"
                    Style="{StaticResource MenuItemButtonStyle}"
                    Click="NavigateToPage"/>
                <Button x:Name="BtnStatistics" Content="Просмотр статистики"
                    Style="{StaticResource MenuItemButtonStyle}"
                    Click="NavigateToPage"/>
                <Button x:Name="BtnPhotos" Content="Просмотр Фото"
                    Style="{StaticResource MenuItemButtonStyle}"
                    Click="NavigateToPage"/>
                <Button x:Name="BtnUsers" Content="Просмотр Пользователей"
                    Style="{StaticResource MenuItemButtonStyle}"
                    Click="NavigateToPage"/>
                <Button x:Name="BtnAddAdmin" Content="Добавить администратора"
                    Style="{StaticResource MenuItemButtonStyle}"
                    Click="NavigateToPage"/>
                <Button x:Name="BtnAllAdmin" Content="Посмотреть всех администратора"
    Style="{StaticResource MenuItemButtonStyle}"
    Click="NavigateToPage"/>
                <Separator Height="1" Margin="20,20" Background="{StaticResource SoftLavenderBrush}"/>
                <Button x:Name="BtnLogout" Content="Выйти из аккаунта"
                    Style="{StaticResource MenuItemButtonStyle}"
                    Click="OnLogoutClick"
                    Foreground="#EF4444"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame"
           Grid.Column="1"
           NavigationUIVisibility="Hidden"
           Background="Transparent"/>
    </Grid>
</Window>