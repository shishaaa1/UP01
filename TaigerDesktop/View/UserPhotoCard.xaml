<UserControl x:Class="TaigerDesktop.View.UserPhotoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="240" Height="340"
             HorizontalAlignment="Center">
    <Border Background="{StaticResource WhiteBrush}"
            CornerRadius="16"
            Margin="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Фото из byte[] -->
            <Image Source="{Binding ImageSource}"
                   Stretch="UniformToFill"
                   Grid.Row="0"
                   Margin="12"
                   Cursor="Hand"
                   MouseLeftButtonUp="OpenPhotoViewer"/>

            <!-- Информация -->
            <StackPanel Grid.Row="1" Margin="16 8 16 8">
                <TextBlock Text="{Binding UserName}"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Foreground="{StaticResource DarkPurpleBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Login}"
                           FontSize="13"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0 2 0 0"
                           FontStyle="Italic"/>
            </StackPanel>

            <!-- Кнопки -->
            <UniformGrid Grid.Row="2" Rows="1" Columns="2" Margin="0 0 0 10" HorizontalAlignment="Center">
                <Button Content="Просмотр"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="NaN"
                        FontSize="14"
                        Click="OpenPhotoViewer" Margin="0,20,0,0"/>
                <Button Content="Удалить"
                        Background="#FCA5A5"
                        FontSize="14"
                        Cursor="Hand"
                        Click="DeletePhoto" Margin="0,20,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextBlock.Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F87171"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>