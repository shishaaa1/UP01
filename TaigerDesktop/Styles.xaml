<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Постельные цвета -->
    <Color x:Key="PrimaryColor">#A78BFA</Color>
    <!-- Нежно-фиолетовый -->
    <Color x:Key="LightBackgroundColor">#FAF5FF</Color>
    <!-- Очень светлый лавандовый -->
    <Color x:Key="DarkPurpleColor">#7C3AED</Color>
    <!-- Темно-фиолетовый -->
    <Color x:Key="SoftLavenderColor">#EDE9FE</Color>
    <!-- Мягкий лавандовый -->
    <Color x:Key="WarmGrayColor">#F8FAFC</Color>
    <!-- Теплый серый -->
    <Color x:Key="MutedTextColor">#475569</Color>
    <!-- Приглушенный текст -->

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkPurpleBrush" Color="{StaticResource DarkPurpleColor}"/>
    <SolidColorBrush x:Key="SoftLavenderBrush" Color="{StaticResource SoftLavenderColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
    <SolidColorBrush x:Key="WarmGrayBrush" Color="{StaticResource WarmGrayColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>

    <!-- Текст стили -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource DarkPurpleBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 0 0 30"/>
    </Style>

    <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 0 15 0"/>
    </Style>

    <!-- Стиль для TextBox -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="45"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="15 10"/>
        <Setter Property="BorderBrush" Value="{StaticResource SoftLavenderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 15 0 0"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
    </Style>

    <!-- Стиль для кнопки -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Width" Value="220"/>
        <Setter Property="Margin" Value="0 30 0 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#7C3AED"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" 
                                Opacity="0.2" 
                                BlurRadius="6" 
                                Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для декоративного фона -->
    <Style x:Key="ContentBackgroundStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Margin" Value="20 60 20 20"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" 
                                Opacity="0.1" 
                                BlurRadius="10" 
                                Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Стиль для PasswordBox (идентичен ModernTextBoxStyle) -->
    <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Height" Value="45"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="15 10"/>
        <Setter Property="BorderBrush" Value="{StaticResource SoftLavenderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 15 0 0"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
    </Style>
</ResourceDictionary>