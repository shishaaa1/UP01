<Window x:Class="TaigerDesktop.Pages.PhotoViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр фото"
        MinWidth="400"
        MinHeight="300"
        Width="600"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource LightBackgroundBrush}">

    <Grid Margin="20">
        <!-- Изображение растягивается, сохраняя пропорции -->
        <Image x:Name="imageControl"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
               MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" />

        <!-- Кнопка "Закрыть" в правом нижнем углу -->
        <Button Content="Закрыть"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="120"
                Height="40"
                Margin="0,0,0,0"
                Click="Close_Click" />
    </Grid>
</Window>