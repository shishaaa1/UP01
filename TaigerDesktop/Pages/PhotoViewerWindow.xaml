<!-- PhotoViewerWindow.xaml -->
<Window x:Class="TaigerDesktop.Pages.PhotoViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр фото" Height="600" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Image x:Name="imageControl" Stretch="Uniform" Margin="10"/>
        <Button Content="Закрыть" Width="100" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="20" Click="Close_Click"/>
    </Grid>
</Window>