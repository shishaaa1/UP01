<Page x:Class="TaigerDesktop.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TaigerDesktop.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <!-- Фон -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/backgroundHomePage.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <!-- Тёмная подложка для читаемости текста -->
        <Border Background="#80000000" 
                CornerRadius="20"
                Width="500"
                Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        TextBlock.TextAlignment="Center">

                <!-- Заголовок -->
                <TextBlock Text="Добро пожаловать в админ-панель"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0 0 0 15"/>

                <!-- Никнейм администратора -->
                <TextBlock Text="{Binding CurrentAdminName, FallbackValue='Администратор'}" 
                           FontSize="22"
                           FontWeight="Medium"
                           Foreground="#E0E7FF"
                           Margin="0 0 0 8"/>

                <!-- Логин администратора (дополнительная информация) -->
                <TextBlock Text="{Binding CurrentAdminLogin, StringFormat='Логин: {0}', FallbackValue='Неизвестный'}" 
                           FontSize="14"
                           Foreground="#A0A0A0"
                           Margin="0 0 0 5"/>

                <!-- Подпись -->
                <TextBlock Text="Вы вошли как администратор"
                           FontSize="16"
                           Foreground="#C0C0C0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>