<Page x:Class="TaigerDesktop.Pages.CheckPhotos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Проверка фотографий"
      Background="{StaticResource LightBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Фотографии пользователей"
                   Style="{StaticResource PageTitleStyle}"
                   Grid.Row="0"/>

        <!-- Сетка фотографий с действиями -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0 10 0 0">
            <ItemsControl ItemsSource="{Binding UserPhotos}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="260"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource WhiteBrush}"
                                CornerRadius="16"
                                Margin="16"
                                Width="240"
                                Height="320"
                               >
                            

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Фото -->
                                <Image Source="{Binding ImagePath}"
                                       Stretch="UniformToFill"
                                       Grid.Row="0"
                                       Margin="12"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="OpenPhotoViewer"/>

                                <!-- Инфо -->
                                <StackPanel Grid.Row="1" Margin="16 8 16 12">
                                    <TextBlock Text="{Binding UserName}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="{StaticResource DarkPurpleBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding UploadDate}"
                                               FontSize="13"
                                               Foreground="{StaticResource MutedTextBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0 2"/>
                                </StackPanel>

                                <!-- Кнопки -->
                                <StackPanel Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                         
                                            Margin="0 0 0 16">

                                    <!-- Просмотреть -->
                                    <Button Content="Просмотр"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Width="100"
                                            Height="40"
                                            FontSize="14"
                                            Click="OpenPhotoViewer"/>

                                    <!-- Удалить -->
                                    <Button Content="Удалить"
                                            Background="#FCA5A5"
                                            Width="100"
                                            Height="40"
                                            FontSize="14"
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      TextBlock.Foreground="White"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#F87171"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Effect>
                                            <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>