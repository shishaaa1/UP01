<Page x:Class="TaigerDesktop.Pages.CheckPhotos"
      xmlns:local="clr-namespace:TaigerDesktop.View"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Проверка фотографий"
      Background="{StaticResource LightBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Фотографии пользователей"
                   Style="{StaticResource PageTitleStyle}"
                   Grid.Row="0"/>

        <!-- Сетка фотографий с действиями -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0 10 0 0">
            <ItemsControl ItemsSource="{Binding UserPhotos}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="260"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:UserPhotoCard/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>