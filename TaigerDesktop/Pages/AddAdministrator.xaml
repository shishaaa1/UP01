<Page x:Class="TaigerDesktop.Pages.AddAdministrator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAdministrator"
      Background="{StaticResource LightBackgroundBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Декоративный фон -->
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                Style="{StaticResource ContentBackgroundStyle}"
                Panel.ZIndex="-1"
                Margin="0,0"/>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Добавить администратора"
                   Style="{StaticResource PageTitleStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,25,0,15"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    Margin="40,10"
                    MaxWidth="420"
                    VerticalAlignment="Center">

            <!-- Логин -->
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="Имя:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,0"/>
                <TextBox x:Name="Name"
                         Style="{StaticResource ModernTextBoxStyle}"/>
            </StackPanel>

            <!-- Имя -->
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="Логин:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,0"/>
                <TextBox x:Name="Login"
                         Style="{StaticResource ModernTextBoxStyle}"/>
            </StackPanel>

            <!-- Пароль -->
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="Пароль:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,0"/>
                <PasswordBox x:Name="Password"
                             Style="{StaticResource ModernPasswordBoxStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопка -->
        <Button Grid.Row="2" Grid.Column="1"
                Content="Добавить администратора"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Center"
                Width="280"
                Height="42"
                Margin="0,0,0,0"
                FontSize="13" Click="Button_Click"/>
    </Grid>
</Page>