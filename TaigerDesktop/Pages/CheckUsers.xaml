<Page x:Class="TaigerDesktop.Pages.CheckUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Проверка пользователей"
      Background="{StaticResource LightBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Список пользователей"
                   Style="{StaticResource PageTitleStyle}"
                   Grid.Row="0"/>

        <!-- Список пользователей -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0 10 0 0">
            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource WhiteBrush}"
                                CornerRadius="14"
                                Margin="0 0 0 16"
                                Padding="20"
                               >
                           

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Аватар -->
                                <Ellipse Width="70" Height="70" Grid.Column="0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding AvatarPath}" 
                                                    Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <!-- Информация -->
                                <StackPanel Grid.Column="1" Margin="20 0 0 0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FullName}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DarkPurpleBrush}"/>
                                    
                                </StackPanel>

                                <!-- Кнопки действий -->
                                <StackPanel Grid.Column="2" 
                                            Orientation="Horizontal" 
                                            VerticalAlignment="Center"
                                            >

                                    <!-- Изменить -->
                                    <Button Content="Изменить"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Width="110"
                                            Height="42"
                                            FontSize="15"/>

                                    <!-- Удалить -->
                                    <Button Content="Удалить"
                                            Background="#FCA5A5"
                                            Width="110"
                                            Height="42"
                                            FontSize="15"
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      TextBlock.Foreground="White"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#F87171"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Effect>
                                            <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>