<Page x:Class="TaigerDesktop.Pages.CheckStat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="750" d:DesignWidth="1100"
      Title="Статистика пользователей"
      Background="{StaticResource LightBackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Динамика пользователей"
                   Style="{StaticResource PageTitleStyle}"
                   Grid.Row="0"
                   Margin="0 0 0 25"/>

        <!-- KPI Карточки -->
        <ItemsControl Grid.Row="1" Margin="0 0 0 30">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource WhiteBrush}"
                            CornerRadius="16"
                            Padding="20"
                            Margin="8">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" Opacity="0.15" BlurRadius="10"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Label}"
                                       FontSize="14"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       Grid.Row="0"/>

                            <TextBlock Text="{Binding Value}"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkPurpleBrush}"
                                       Grid.Row="1"
                                       Margin="0 6 0 0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- ✅ ГРАФИК НА РОДНЫХ WPF СРЕДСТВАХ -->
        <Border Grid.Row="2"
                Background="{StaticResource WhiteBrush}"
                CornerRadius="16"
                Padding="25"
                Margin="0 0 0 25">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Opacity="0.12" BlurRadius="12"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Динамика новых пользователей за 30 дней"
                           FontSize="18"
                           FontWeight="Medium"
                           Foreground="{StaticResource DarkPurpleBrush}"
                           Grid.Row="0"
                           Margin="0 0 20 0"/>

                <!-- График -->
                <Canvas x:Name="ChartCanvas" 
                        Grid.Row="1" 
                        Height="300"
                        Background="Transparent"
                        MouseMove="ChartCanvas_MouseMove">

                    <!-- Линии сетки -->
                    <Canvas x:Name="GridCanvas"/>

                    <!-- Основная линия графика -->
                    <Path x:Name="ChartPath" 
                          Stroke="{StaticResource PrimaryBrush}"
                          StrokeThickness="4"
                          StrokeLineJoin="Round"
                          Fill="Transparent"
                          Data="{Binding ChartGeometry}"
                         >
                        <Path.Effect>
                            <DropShadowEffect ShadowDepth="0" Opacity="0.4" BlurRadius="8" Color="{StaticResource PrimaryColor}"/>
                        </Path.Effect>
                    </Path>

                    <!-- Точки на графике -->
                    <Canvas x:Name="PointsCanvas"/>

                    <!-- Подсказка -->
                    <Border x:Name="TooltipBorder"
                            Background="{StaticResource WhiteBrush}"
                            CornerRadius="8"
                            Padding="12"
                            Visibility="Collapsed"
                           >
                        <TextBlock x:Name="TooltipText" 
                                   Foreground="{StaticResource DarkPurpleBrush}"
                                   FontWeight="SemiBold"/>
                    </Border>
                </Canvas>
            </Grid>
        </Border>

        <!-- Таблица данных -->
        <Border Grid.Row="3"
                Background="{StaticResource WhiteBrush}"
                CornerRadius="16"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовки таблицы -->
                <Grid Background="{StaticResource SoftLavenderBrush}" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Дата" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Margin="20 16" HorizontalAlignment="Left"/>
                    <TextBlock Text="Новые" Grid.Column="1" Style="{StaticResource FieldLabelStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Активные" Grid.Column="2" Style="{StaticResource FieldLabelStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Удалено" Grid.Column="3" Style="{StaticResource FieldLabelStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Всего" Grid.Column="4" Style="{StaticResource FieldLabelStyle}" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Данные таблицы -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <ItemsControl ItemsSource="{Binding DailyStats}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource SoftLavenderBrush}" BorderThickness="0 0 0 1">
                                    <Grid Height="50">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Date, StringFormat='dd MMM'}"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Margin="20 0"
                                                   Foreground="{StaticResource MutedTextBrush}"
                                                   FontSize="14"/>

                                        <TextBlock Text="{Binding NewUsers}"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Medium"
                                                   Foreground="#10B981"/>

                                        <TextBlock Text="{Binding ActiveUsers}"
                                                   Grid.Column="2"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource DarkPurpleBrush}"/>

                                        <TextBlock Text="{Binding DeletedUsers}"
                                                   Grid.Column="3"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#EF4444"/>

                                        <TextBlock Text="{Binding TotalUsers}"
                                                   Grid.Column="4"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkPurpleBrush}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>