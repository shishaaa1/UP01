<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <!-- Полученное сообщение (левая сторона) -->
    <LinearLayout
        android:id="@+id/layout_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingEnd="60dp">

        <!-- Аватар отправителя -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_received_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/alt1" />

        <!-- Текст сообщения с переносом -->
        <TextView
            android:id="@+id/tv_received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_received"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Привет! Как дела?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxWidth="280dp"
            android:ellipsize="none"
            android:scrollHorizontally="false" />

    </LinearLayout>

    <!-- Отправленное сообщение (правая сторона) -->
    <LinearLayout
        android:id="@+id/layout_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingStart="60dp">

        <!-- Текст сообщения с переносом -->
        <TextView
            android:id="@+id/tv_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_sent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Все отлично!"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxWidth="280dp"
            android:ellipsize="none"
            android:scrollHorizontally="false" />

        <!-- Ваш аватар -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_sent_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/alt2" />

    </LinearLayout>

</LinearLayout>